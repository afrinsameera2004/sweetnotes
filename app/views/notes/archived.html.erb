
<% content_for :title, "Archived Notes" %>

<div class="w-full max-w-3xl mx-auto px-4">
  
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Archived Notes</h1>
    <%= link_to "← Back to Active Notes", notes_path,
        class: "bg-pink-100 hover:bg-pink-200 text-pink-800 font-medium px-4 py-2 rounded-md shadow text-sm" %>
  </div>

  <% if @notes.present? %>
    <div class="space-y-4">
      <% @notes.each do |note| %>
        <div class="bg-gray-50 p-4 rounded-lg shadow flex flex-col sm:flex-row justify-between sm:items-center gap-4">
          <div>
            <h2 class="text-lg font-semibold text-pink-600"><%= note.title %></h2>
            <p class="text-gray-600 mt-2"><%= truncate(note.content, length: 100) %></p>
          </div>

          <div class="flex flex-wrap gap-2">
            <%= link_to "Show", note, class: "bg-red-100 hover:bg-red-200 px-3 py-1.5 rounded-md text-sm font-medium" %>
            <%= button_to "Unarchive", unarchive_note_path(note), method: :patch,
                data: { turbo_confirm: "Unarchive this note?" },
                class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1.5 rounded-md text-sm font-medium " %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-gray-500 mt-16">
      <p class="text-lg">📂 You don’t have any archived notes yet.</p>
    </div>
  <% end %>
</div>

